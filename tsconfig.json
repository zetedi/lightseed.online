{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "./apps/*": ["src/apps/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}